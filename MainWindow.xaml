<Window x:Class="TropeConnect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TropeConnect"
        mc:Ignorable="d"
        Title="Trope Connect" Height="400" Width="550" ResizeMode="NoResize">
    <Grid>
        <Button x:Name="analyzeButton" Content="Analyze" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="221,0,221,15" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Center" Height="250" TextWrapping="Wrap" VerticalAlignment="Center" Width="500" Margin="8,14,9,55" x:Name="inputTextBox" AcceptsReturn="True"/>
        <TextBlock x:Name="loadingText" HorizontalAlignment="Center" Text="" VerticalAlignment="Bottom" Margin="0,0,0,50" FontSize="10" FontStyle="Italic" Width="550" TextAlignment="Center" LineStackingStrategy="BlockLineHeight" Height="14" MaxHeight="14"/>
    </Grid>
</Window>
